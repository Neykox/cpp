#-----------------------------------------------#
################### PATHS #######################
#-----------------------------------------------#
HEAD_PATH	=	./#includes/
SRCS_PATH	=	./#scr/
OBJ_PATH	=	./objects/

#-----------------------------------------------#
################## SOURCES ######################
#-----------------------------------------------#
SRCS_NAME =		main.cpp						\
				ClapTrap.cpp
OBJ_NAME = ${SRCS_NAME:.cpp=.o}

OBJ = $(addprefix $(OBJ_PATH), $(OBJ_NAME))
SRC = $(addprefix $(SRCS_PATH), $(SRCS_NAME))

#-----------------------------------------------#
################## HEADERS ######################
#-----------------------------------------------#
HEADERS =	ClapTrap.hpp

#-----------------------------------------------#
################### OTHER #######################
#-----------------------------------------------#

NAME = claptrap

CC = c++

FLAGS = -Wall -Wextra -Werror -std=c++98

#-----------------------------------------------#
################### RULES #######################
#-----------------------------------------------#

all : $(NAME)

$(NAME) : $(OBJ)
	$(CC) $(FLAGS) $^ -o $(NAME)

$(OBJ_PATH):
	mkdir -p $@

$(OBJ_PATH)%.o : $(SRCS_PATH)%.cpp
	$(CC) $(FLAGS) -c $< -o $@

$(OBJ) : Makefile $(HEADERS) | $(OBJ_PATH)

clean :
	rm -rf $(OBJ_PATH)

fclean : clean
	rm -f $(NAME)

re : fclean all
